# Example DocOctopy Configuration
# Copy this to your project's pyproject.toml and customize as needed

[tool.docguard]
# Paths to scan (default: current directory)
paths = ["src", "tests", "examples"]

# Exclude patterns (gitignore-style)
exclude = [
    "**/.venv/**",
    "**/build/**", 
    "**/dist/**",
    "**/node_modules/**",
    "**/__pycache__/**",
    "**/*.pyc",
    "**/.pytest_cache/**",
    "**/migrations/**",  # Django migrations
    "**/venv/**",
    "**/.tox/**",
]

# Rule configuration
[tool.docguard.rules]
# Basic compliance rules
DG101 = "error"      # Missing docstring (functions and classes)
DG301 = "warning"    # Summary first line should end with period
DG302 = "warning"    # Blank line required after summary

# Google style validation rules
DG201 = "error"      # Google style docstring parse error
DG202 = "error"      # Parameter missing from docstring
DG203 = "error"      # Extra parameter in docstring
DG204 = "warning"    # Returns section missing or mismatched
DG205 = "info"       # Raises section validation

# Per-path overrides
[[tool.docguard.overrides]]
patterns = ["tests/**"]
rules.DG101 = "off"        # Disable missing docstrings in tests
rules.DG201 = "warning"    # Relax parse errors in tests
rules.DG202 = "warning"    # Relax parameter requirements in tests

[[tool.docguard.overrides]]
patterns = ["**/migrations/**"]
rules.DG101 = "off"        # Disable all rules for migrations

[[tool.docguard.overrides]]
patterns = ["**/__init__.py"]
rules.DG101 = "warning"    # Relax missing docstrings for __init__.py files
